<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Add New Post
                <small>Jot something down</small>
            </h1>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-lg-7">
            <h1>
                <small>Title</small>
            </h1>
            {{input class="form-control" placeholder='Title' type='text' value=model.title}}
            <h1>
                <small>Author</small>
            </h1>
            {{input class="form-control" placeholder='Author' type='text' value=model.author}}

            <h1>
                <small>Image</small>
            </h1>
            {{#if model.image}}
            <img class="img-responsive" {{bind-attr src=model.image}} alt="">
            {{else}}
            <h1>
                <small>No Image Selected</small>
            </h1>
            {{/if}}
            <hr>
            {{#each image in controller.images}}
            <a class="btn" {{action 'selectImage' image model}}>
                <img class="thumbnail profile-img-card pull-left" src={{image.image_url}} alt="">
            </a>
            {{/each}}
            <hr>
            <h1>
                <small>Post Body</small>
            </h1>
            <p class="lead">
                {{textarea class="form-control" placeholder='Post Body' value=model.post_body rows='10'}}
            </p>
            <h1>
                <i class="fa fa-fw fa-twitter fa"></i><small>Notify Twitter</small>
            </h1>
            <p>
                {{input class="form-control" placeholder='Tweet' type='text' value=twitterPost}}
            </p>
            <a class="btn btn-warning" {{action 'cancel'}}>
                Cancel
                &nbsp;
                <span class="glyphicon glyphicon-remove"></span>
            </a>
            <a class="btn btn-primary" {{action 'createNew'}}>
                Save Post
                &nbsp;
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
            <a class="btn btn-primary" {{action 'createNewAndContinue'}}>
                Save and Create Another
                &nbsp;
                <span class="glyphicon glyphicon-refresh"></span>
            </a>
        </div>
    </div>
</div>